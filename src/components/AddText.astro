<div class="row mt-5" id="add-text-cont">
  <div class="col">
    <div class="w-full md:w-full mb-6">
      <label class="block uppercase tracking-wide text-gray-400 text-sm font-bold mb-2">Enter text</label>
      <textarea required id="text" required  rows="4" class="appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none focus:border-[#98c01d]"> </textarea>
  </div>
  </div>
  <div class="text-right w-full">
    <button class="appearance-none inline-block bg-green-700 text-gray-100 font-bold text-xl rounded-lg py-3 px-6 leading-tight hover:bg-green-600">
      Add text
    </button>
  </div>
</div>


<script>  
  import { messageStore } from '../store.js';
  
  const button = document.querySelector('button');
  const textarea = document.querySelector('textarea');

  function submitText() { 
    messageStore.set(textarea.value);
    document.getElementById('add-text-cont').style.display = 'none';
  }

  button.addEventListener('click', submitText);
</script>
