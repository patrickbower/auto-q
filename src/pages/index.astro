---
import Layout from "../layouts/Layout.astro";
import TextContainer from "../components/TextContainer.jsx";
---

<Layout title="AutoQ">
  <main>
    <div class="h-screen grid grid-rows-[auto_1fr_auto]">
      <div class="p-4 text-center">
        <h1
          class="text-white text-2xl font-bold text-center relative inline-block"
        >
          AutoQ
        </h1>
      </div>
      <div class="overflow-auto">
        <TextContainer client:load />
      </div>
    </div>
  </main>
</Layout>

<style>
  h1:after {
    content: "";
    position: absolute;
    bottom: 2px;
    left: 23px;
    width: 40px;
    height: 3px;
    background-color: #ef4444;
  }
</style>
