---
import Layout from "../layouts/Layout.astro";
import TextContainer from "../components/TextContainer.jsx";
import Info from "../components/Info.jsx";
---

<Layout title="AutoQ">
  <main>
    <div class="h-screen grid grid-rows-[auto_1fr_auto]">
      <Info client:load />
      <div class="p-4 text-center">
        <h1
          class="text-white text-2xl font-bold text-center relative inline-block"
        >
          AutoQ
        </h1>
      </div>
      <div class="overflow-auto">
        <TextContainer client:load />
      </div>
    </div>
  </main>
</Layout>

<style is:global>
  html {
    /* neutral-600 */
    background: #525252;
    color: white;
    font-family: "SUSE", sans-serif;
    font-optical-sizing: auto;
    font-weight: 200;
    font-style: normal;
    font-size: 20px;
  }

  .speech-text span {
    color: white;
    transition: all 0.3s ease-in-out;
  }

  .speech-text span.highlight {
    color: #525252;
  }

  h1:after {
    content: "";
    position: absolute;
    bottom: 2px;
    left: 23px;
    width: 40px;
    height: 3px;
    background-color: #ef4444;
  }

  .speech-bubble:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 0;
    border: 65px solid transparent;
    border-top-color: #404040;
    border-bottom: 0;
    margin-left: -65px;
    margin-bottom: -65px;
  }
</style>
